<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="226dp">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

      <TextView
          android:id="@+id/n4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="#000000"
          android:maxLength="4"
          android:layout_marginStart="8dp"
          android:layout_marginEnd="8dp"
          android:layout_marginBottom="15dp"
          android:text="TextView"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/p4" />

      <TextView
          android:id="@+id/n3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="#000000"
          android:maxLength="4"
          android:layout_marginStart="8dp"
          android:layout_marginEnd="8dp"
          android:layout_marginBottom="24dp"
          android:text="TextView"
          app:layout_constraintBottom_toTopOf="@+id/n4"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/p3" />

      <TextView
          android:id="@+id/n2"
          android:layout_width="wrap_content"
          android:textColor="#000000"
          android:layout_height="wrap_content"
          android:layout_marginStart="8dp"
          android:maxLength="4"
          android:layout_marginEnd="8dp"
          android:layout_marginBottom="24dp"
          android:text="TextView"
          app:layout_constraintBottom_toTopOf="@+id/n3"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/p2" />

      <ProgressBar
          android:id="@+id/p4"
          style="?android:attr/progressBarStyleHorizontal"
          android:layout_width="205dp"
          android:layout_height="18dp"
          android:layout_marginStart="8dp"
          android:layout_marginEnd="8dp"
          android:layout_marginBottom="15dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.23"
          app:layout_constraintStart_toEndOf="@+id/txtb4"
          android:theme="@style/AppTheme.Blue"/>

      <ProgressBar
          android:id="@+id/p3"
          style="?android:attr/progressBarStyleHorizontal"
          android:layout_width="205dp"
          android:layout_height="18dp"
          android:layout_marginStart="8dp"
          android:layout_marginEnd="8dp"
          android:layout_marginBottom="24dp"
          app:layout_constraintBottom_toTopOf="@+id/p4"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.23"
          app:layout_constraintStart_toEndOf="@+id/txtb3"
          android:theme="@style/AppTheme.Blue"/>

      <ProgressBar
          android:id="@+id/p2"
          android:theme="@style/AppTheme.Blue"
          style="?android:attr/progressBarStyleHorizontal"
          android:layout_width="205dp"
          android:layout_height="18dp"
          android:layout_marginStart="8dp"
          android:layout_marginEnd="8dp"
          android:layout_marginBottom="24dp"
          app:layout_constraintBottom_toTopOf="@+id/p3"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.23"
          app:layout_constraintStart_toEndOf="@+id/txtb2" />

      <TextView
          android:id="@+id/materia"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginTop="8dp"
          android:layout_marginBottom="8dp"
          android:textColor="#000000"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.059" />

      <TextView
          android:id="@+id/txtb1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginTop="8dp"
          android:layout_marginBottom="24dp"
          android:text="1ยบ Bimestre"
          android:textColor="#000000"
          app:layout_constraintBottom_toTopOf="@+id/txtb2"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="1.0" />

      <TextView
          android:id="@+id/txtb2"
          android:textColor="#000000"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginBottom="24dp"
          android:text="2ยบ Bimestre"
          app:layout_constraintBottom_toTopOf="@+id/txtb3"
          app:layout_constraintStart_toStartOf="parent" />

      <TextView
          android:id="@+id/txtb3"
          android:textColor="#000000"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginBottom="24dp"
          android:text="3ยบ Bimestre"
          app:layout_constraintBottom_toTopOf="@+id/txtb4"
          app:layout_constraintStart_toStartOf="parent" />

      <TextView
          android:id="@+id/txtb4"
          android:textColor="#000000"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="16dp"
          android:layout_marginBottom="15dp"
          android:text="4ยบ Bimestre"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent" />

      <ProgressBar
          android:id="@+id/p1"
          style="?android:attr/progressBarStyleHorizontal"
          android:layout_width="205dp"
          android:layout_height="18dp"
          android:layout_marginStart="8dp"
          android:layout_marginTop="8dp"
          android:layout_marginEnd="8dp"
          android:layout_marginBottom="24dp"
          android:theme="@style/AppTheme.Blue"
          app:layout_constraintBottom_toTopOf="@+id/p2"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.232"
          app:layout_constraintStart_toEndOf="@+id/txtb1"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.932" />

      <TextView
          android:id="@+id/n1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="8dp"
          android:layout_marginEnd="8dp"
          android:layout_marginBottom="24dp"
          android:maxLength="4"
          android:text="TextView"
          android:textColor="#000000"
          app:layout_constraintBottom_toTopOf="@+id/n2"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/p1"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="1.0" />


    </android.support.constraint.ConstraintLayout>

  </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>